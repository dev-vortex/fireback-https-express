{
    "compilerOptions": {
      "target": "esnext",
      "module": "CommonJs",
      "lib": ["es2017"],
      "declaration": true,
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": "src",
      "removeComments": true,
      "strict": true,
      "alwaysStrict": true,
      "moduleResolution": "node",
      "baseUrl": "./",
      "paths": {
          "~/*": ["src/*/index", "src/*"]
      },
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src", "ignore/ext-middleware"],
    "exclude": ["dist/**/*", "ignore/**/*", "tests/**/*"]
  }